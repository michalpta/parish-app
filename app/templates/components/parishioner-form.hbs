{{#if errorMessage }}
  <div class="alert alert-danger">
    {{errorMessage}}
  </div>
{{/if}}
{{#if isNewRecord}}
  <div class="alert alert-warning">{{t 'app.alerts.recordNotSaved'}}</div>
{{/if}}
<form class="margin-bottom">
  <fieldset class="margin-bottom">
    <div><label>{{t 'parishioner.attributes.name'}}</label></div>
    <div>
      {{input value=model.name class='form-control'}}
    </div>
    <div><label>{{t 'parishioner.attributes.city'}}</label></div>
    <div>
      {{input value=model.city class='form-control'}}
    </div>
    <div><label>{{t 'parishioner.attributes.street'}}</label></div>
    <div>
      {{input value=model.street class='form-control'}}
    </div>
    <div><label>{{t 'parishioner.attributes.streetNumber'}}</label></div>
    <div>
      {{input value=model.streetNumber type='number' class='form-control'}}
    </div>
  </fieldset>
  <div>
    <button {{action 'save'}} class="btn btn-success form-control">{{t 'app.actions.save'}}</button>
    {{#unless isNewRecord}}
      <a {{action 'showDeleteConfirmation'}} href="#" class="pull-right">{{t 'app.actions.delete'}}</a>
    {{/unless}}
  </div>
</form>

{{#if deleteConfirmationNeeded}}
  {{#ember-wormhole to='modal-hole'}}
    {{#modal-window title=(t 'app.alerts.areYouSure') yesHandler=(action 'delete') noHandler=(action 'cancelDelete')}}
      {{t 'app.alerts.areYouSureYouWantToDelete'}}
    {{/modal-window}}
  {{/ember-wormhole}}
{{/if}}