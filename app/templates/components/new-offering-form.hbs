<div class="well">
    <p>Are you going to add a new offering?</p>
    <form style="margin-bottom: 15px;">
        <div><label>Parishioner</label></div>
        <fieldset style="margin-bottom: 15px;">
            <div>
            <select onchange={{action 'selectParishioner' value='target.value'}} multiple data-placeholder="Select parishioner..." class="form-control">
                {{#each parishioners as |parishioner| }}
                    <option value="{{parishioner.id}}">{{parishioner.name}}</option>
                {{/each}}
            </select>
            </div>
            <div><label>Value</label></div>
            <div>
                {{input value=offering.value class='form-control offering-value' id='offering-value'}}
            </div>
            <div><label>Date</label></div>
            <div>
                {{input value=offering.date class='form-control' id='offering-date'}}
            </div>
        </fieldset>
        <div>
            <button {{action 'addOffering'}} class="btn btn-success form-control">Add</button>
        </div>
    </form>
</div>