<button {{action 'toggleShowNewParishionerForm'}} class="btn btn-default">Add new parishioner</button>

{{#if isNewParishionerFormVisible}}
<h3>New Parishioner</h3>
{{new-parishioner-form}}
{{/if}}

<h3>Parishioners</h3>

{{#each model as |parishioner|}}
    <div class="well">
    <p>PARISHIONER</p>
    <h3>Name: {{parishioner.name}}</h3>
    <p>City: {{parishioner.city}}</p>
    </div>
{{/each}}